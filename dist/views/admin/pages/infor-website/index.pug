extends ../../layouts/layouts.pug

block header
     h1 Thông tin website

block css
     //- link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")
     //- link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta2/dist/css/bootstrap-select.min.css")
     link(rel="stylesheet" href="/admin/css/infor-website/index.css")
block script
     script(src="https://cdn.jsdelivr.net/npm/axios@1.7.9/dist/axios.min.js")
     //- script(src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js")
     //- script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")

     //- script(src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta2/dist/js/bootstrap-select.min.js")

     script(src="/admin/js/infor-website/index.js")

block hb
     sl-button(variant="primary" size="small" btn-update = `/${ROUTERS.ADMIN.AUTH}${ROUTERS.ADMIN.INFOR_WEBSITE}`)
          sl-icon(slot="prefix" name="plus-circle")
          | Cập nhật



block main
     sl-details(summary="Thông tin cơ bản" open)
          sl-input(label="Tên website" required size = 'small' class="label-on-left" name='name-website' value=inforWebsite.nameWeb)
               sl-icon(name="globe2" slot="prefix")
          sl-input(label="Tên công ty" required size = 'small' class="label-on-left" name='name-company' value=inforWebsite.nameCompany)
               sl-icon(name="building-check" slot="prefix")
          sl-input(label="Hotline" required size = 'small' class="label-on-left" name='hotline' value=inforWebsite.hotline)
               sl-icon(name="headset" slot="prefix")
          sl-input(label="Số điện thoại" required size = 'small' class="label-on-left" name='phone' value=inforWebsite.phone)
               sl-icon(name="telephone" slot="prefix")
          sl-input(label="Email" required size = 'small' class="label-on-left" name='email' value=inforWebsite.email)
               sl-icon(name="envelope-at" slot="prefix")
          sl-input(label="Địa chỉ" required size = 'small' class="label-on-left" name='address' value=inforWebsite.address)
               sl-icon(name="geo" slot="prefix")
          sl-input(label="Bản đồ (Nhúng iframe)" required size = 'small' class="label-on-left" name='map' value=inforWebsite.map)
               sl-icon(name="map" slot="prefix")
          sl-input(label="Copyright" required size = 'small' class="label-on-left" name='copyright' value=inforWebsite.copyright)
               sl-icon(name="c-circle" slot="prefix")