extends ../../layouts/layouts.pug

block css
    link(rel="stylesheet" href="/client/css/checkouts/index.css")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta2/dist/css/bootstrap-select.min.css")

block script
    script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11")
    script(src="https://cdn.jsdelivr.net/npm/axios@1.7.9/dist/axios.min.js")
    script(src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta2/dist/js/bootstrap-select.min.js")
    script(type="module" src="/client/js/customer/create-address.js") 
block main
    div(class=`py-[20px] bg-transparent`)
        div(class=`container`)
            sl-breadcrumb
                sl-breadcrumb-item(href='/')
                    sl-icon(slot="prefix" name="house")
                    | Trang chủ
                sl-breadcrumb-item(href=`${ROUTERS.CLIENT.CUSTOMER.PATH}${ROUTERS.CLIENT.CUSTOMER.ADDRESS}`) Địa chỉ nhận hàng
                sl-breadcrumb-item() Thêm mới địa chỉ nhận hàng

    - if(INFOR_CUSTOMER)
        div
            div(class="container mx-auto py-8")
                div(class="grid grid-cols-12 gap-8")
                    // Left Sidebar
                    include ../../partials/info-customer-leftbar.pug
                    // Main Content
                    div(class="col-span-9 flex flex-col gap-y-[20px]")
                        div(class="bg-white rounded-lg shadow p-6")
                            div(class='flex items-center justify-between')
                                div 
                                    h2(class="text-xl font-semibold mb-[5px]") Thêm mới địa chỉ nhận hàng
                                    p(class="text-gray-600 mb-6 text-[14px]") Thêm mới địa chỉ nhận hàng của bạn để thuận tiện trong lúc thanh toán
                                sl-button(variant='primary' btn-create-address = `${ROUTERS.CLIENT.CUSTOMER.PATH}${ROUTERS.CLIENT.CUSTOMER.ADDRESS}${ROUTERS.CLIENT.CUSTOMER.CREATE_ADDRESS}`) Thêm ngay
                        div(class='flex flex-col gap-y-[15px] bg-white rounded-lg shadow p-6')
                            sl-input(required label = 'Họ tên' name='fullname')
                            sl-input(required label = 'Số điện thoại nhận hàng' maxLenght='10' type='number' name='phone')
                            sl-input(required label = 'Số nhà / Ngõ / Đường' name='address')
                            div(class='flex justify-center gap-x-[10px]')
                                select#city(class="selectpicker" data-live-search="true")
                                    option(value='' selected) Chọn tỉnh / thành
                                select#district(class="selectpicker" data-live-search="true")
                                    option(value='' selected) Chọn quận / huyện
                                select#ward(class="selectpicker" data-live-search="true")
                                    option(value='' selected) Chọn xã / phường