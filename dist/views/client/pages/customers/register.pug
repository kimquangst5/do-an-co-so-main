extends ../../layouts/layouts.pug

block css

block script
     script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11")
     script(src="https://cdn.jsdelivr.net/npm/axios@1.7.9/dist/axios.min.js") 
     script(type="module" src="/client/js/customer/register.js") 

block main
     div(class=`py-[50px]`)
          div(class=`container`)
               div(class=`w-1/2 mx-auto flex flex-col gap-y-[20px]`)

                    sl-input(label = 'Họ và tên' name='fullname')
                    sl-input(label = 'Tên đăng nhập' name='username')
                    sl-input(label = 'Email' name='email')
                    sl-input(type='password' label = 'Mật khẩu' name='password' password-toggle clearable oncopy="return false" oncut="return false" onpaste="return false" onselectstart="return false" ondragstart="return false" ondrop="return false")
                    sl-input(type='password' label = 'Xác nhận lại mật khẩu' name='confirm-password' password-toggle clearable oncopy="return false" oncut="return false" onpaste="return false" onselectstart="return false" ondragstart="return false" ondrop="return false")
                    sl-button(variant="primary" btn-register = `${ROUTERS.CLIENT.CUSTOMER.PATH}${ROUTERS.CLIENT.CUSTOMER.REGISTER}`) Đăng ký