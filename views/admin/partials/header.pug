- const currentTime = new Date().getHours();

header(class=`px-4 py-2 bg-white `)
     div(class=`flex items-center justify-between `)
          div(class=`flex items-center gap-x-[15px]`) 

               label(class="btn btn-sm btn-circle swap swap-rotate bg-transparent border-0 hover:bg-transparent shadow-none")
                    input(type="checkbox")
                    sl-icon(name="list" class=`m-auto swap-off fill-current text-[20px]`)
                    sl-icon(name="x" class=`m-auto swap-on fill-current text-[20px]`)
                    //- svg(class="swap-on fill-current" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 512 512")
                         polygon(points="400 145.49 366.51 112 256 222.51 145.49 112 112 145.49 222.51 256 112 366.51 145.49 400 256 289.49 366.51 400 400 366.51 289.49 256 400 145.49")

               div(class=`text-[20px] font-[700]`) Đồ án cơ sở
          div(class=`flex items-center gap-x-[20px]`)
               div(class=``) Tiếng việt
               div(class=`flex items-center gap-x-[5px]`)
                    - if(currentTime >= 4 && currentTime < 12)
                         div(class=``) Xin chào buổi sáng nhé, 
                    - else if(currentTime >= 12 && currentTime < 14)
                         div(class=``) Xin chào buổi trưa nhé, 
                    - else if(currentTime >= 14 && currentTime < 18)
                         div(class=``) Xin chào buổi chiều nhé, 
                    - else if(currentTime >= 18 && currentTime < 22)
                         div(class=``) Xin chào buổi tối nhé, 
                    - else
                         div(class=``) Đã khuya rồi, giữ gìn sức khỏe nhé,  
                    div(class=``) #{INFOR_USER ? INFOR_USER.fullname : ''}
                    div(class=`p-[2px] border-[2px] border-[#5BE49B] rounded-[50%]`) 
                         div(class=`h-[30px] truncate rounded-[50%] `)
                              img(class="h-full" src="data:image/webp;base64," alt="")
div(class=`sticky top-0 z-[100] flex items-center justify-between px-4 py-2 bg-white`)
     div(class=`font-bold text-[18px]`)
          block header
     div(class=`flex items-center gap-x-[15px]`)
          block hb

