extends ../../layouts/layouts.pug
include ../../mixins/back-list.pug

block header
    h1 Chỉnh sửa nhóm quyền

block css
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/@shoelace-style/shoelace@2.19.1/cdn/themes/light.css" async)

block script
    script(src="https://cdn.jsdelivr.net/npm/axios@1.7.9/dist/axios.min.js") 
    script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11")
    script(src="/admin/js/roles/update.js")

block hb
    +back-list(`/${ROUTERS.ADMIN.AUTH}${ROUTERS.ADMIN.ROLES.PATH}${ROUTERS.ADMIN.ROLES.INDEX}`)
    sl-button(variant="primary", size="small" btn-update-role = `/${ROUTERS.ADMIN.AUTH}${ROUTERS.ADMIN.ROLES.PATH}${ROUTERS.ADMIN.ROLES.UPDATE}/${role._id}`)
        sl-icon(slot="prefix", name="plus-circle")
        | Cập nhật


block main
    div(class=``)
        sl-input(label="Tên nhóm quyền" size="small" name="name" value=role.name)
        sl-textarea(label="Mô tả" size="small" name="description" value=role.description)

        