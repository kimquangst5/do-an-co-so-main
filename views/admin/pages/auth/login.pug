    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/@shoelace-style/shoelace@2.19.1/cdn/themes/light.css")
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Agbalumo&display=swap", rel="stylesheet")
    link(rel="stylesheet", href="/admin/css/auth/login.css")

block script
    script(type="module", src="https://cdn.jsdelivr.net/npm/@shoelace-style/shoelace@2.19.1/cdn/shoelace-autoloader.js")
    script(src="https://cdn.jsdelivr.net/npm/axios@1.7.9/dist/axios.min.js")
    script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11") 
    script(src="/admin/js/login.js")

