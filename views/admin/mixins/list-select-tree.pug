mixin list-select-tree(array, level = 1)
    - if(array && array.length > 0)
        each it in array
            sl-tree-item(expanded)
                div(class=`grid grid-cols-2 justify-between w-full`) 
                    div(class=`flex flex-1`) #{it.name}
                    div(class=`flex gap-x-[10px] items-center absolute top-[1/2] bottom-[1/2] right-0 ml-[100px] `)
                        sl-button(size="small" variant="success" circle href=`/${ROUTERS.ADMIN.AUTH}${ROUTERS.ADMIN.PRODUCT_CATEGORY.PATH}${ROUTERS.ADMIN.PRODUCT_CATEGORY.UPDATE}/${it.id}` class=``)
                            sl-icon(name="pencil-square" label="Chỉnh sửa")
                        sl-button(size="small" variant="danger" circle trash = `/${ROUTERS.ADMIN.AUTH}${ROUTERS.ADMIN.PRODUCT_CATEGORY.PATH}${ROUTERS.ADMIN.PRODUCT_CATEGORY.TRASH}/${it.id}`)
                            sl-icon(name="trash" label="Thùng rác")
                +list-select-tree(it.children, level + 1)