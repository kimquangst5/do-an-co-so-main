extends ../../layouts/layouts.pug

block css
    link(rel="stylesheet" href="/client/css/home/index.css")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/daisyui@4.12.23/dist/full.min.css" )

block script
    script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11")
    script(src="https://cdn.jsdelivr.net/npm/axios@1.7.9/dist/axios.min.js") 
    script(src="/client/js/customer/forgot-password-new-password.js")

block main

    div(class=`py-[20px]`)
        div(class=`container`)
            div(class=`flex flex-col gap-y-[30px] relative`) 
                div(class="text-center")
                    h1(class="text-3xl font-bold text-gray-800 inline-block relative pb-2")
                        span Quên mật khẩu
                        span(class="absolute left-0 bottom-0 w-full border-b-4 border-gray-800")
                    div(class="border-b border-gray-500")
                div(class="flex flex-col gap-y-[15px] mx-auto w-3/5 md:w-1/2 p-6 bg-white shadow-lg  rounded-lg")
                    sl-input(label = 'Email của bạn' type="email" placeholder="Email của bạn" name='email' value=email disabled)
                    sl-input(label = 'Mật khẩu mới' type="password" placeholder="Mật khẩu của bạn" name='password' password-toggle clearable oncopy="return false" oncut="return false" onpaste="return false" onselectstart="return false" ondragstart="return false" ondrop="return false")
                    sl-input(label = 'Xác nhận lại mật khẩu mới' type="password" placeholder="Xác nhận lại mật khẩu mới" name='confirm-password' password-toggle clearable oncopy="return false" oncut="return false" onpaste="return false" onselectstart="return false" ondragstart="return false" ondrop="return false")


                    button(class="w-full bg-[#000000] text-white py-2 rounded-md hover:bg-[#FFFFFF] hover:text-gray-800 hover:border border-gray-800 transition" button-submit = `${ROUTERS.CLIENT.CUSTOMER.PATH}${ROUTERS.CLIENT.CUSTOMER.FORGOT_PASSWORD_NEW_PASSWORD}`) Gửi yêu cầu
                    div(class=`flex items-center gap-x-[5px]`) 
                        div(class=`italic text-[#677279] text-[12px]`) Bạn đã nhớ mật khẩu?
                        a(href=`${ROUTERS.CLIENT.CUSTOMER.PATH}${ROUTERS.CLIENT.CUSTOMER.LOGIN}` class=`italic text-[#ff0000] text-[12px]`) Trở về đăng nhập