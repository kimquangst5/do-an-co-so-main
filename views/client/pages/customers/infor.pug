extends ../../layouts/layouts.pug

block css
block script
    script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11")
    script(src="https://cdn.jsdelivr.net/npm/axios@1.7.9/dist/axios.min.js") 
    //- script(type="module" src="/client/js/customer/login.js") 

block main
    - if(INFOR_CUSTOMER)
        div
            div(class="container mx-auto py-8")
                div(class="grid grid-cols-12 gap-8")
                    // Left Sidebar
                    div(class="col-span-3")
                        div(class="bg-white rounded-lg shadow p-4")
                            h2(class="text-lg font-semibold mb-4") Tài khoản của tôi
                            ul(class="space-y-3")
                                li(class="flex items-center gap-2 text-gray-600 hover:text-black cursor-pointer")
                                    i(class="fa-regular fa-user")
                                    span Thông tin cá nhân
                                li(class="flex items-center gap-2 text-gray-600 hover:text-black cursor-pointer")
                                    i(class="fa-solid fa-location-dot")
                                    span Địa chỉ nhận hàng
                                li(class="flex items-center gap-2 text-gray-600 hover:text-black cursor-pointer")
                                    i(class="fa-solid fa-cart-shopping")
                                    span Đơn hàng
                    // Main Content
                    div(class="col-span-9")
                        div(class="bg-white rounded-lg shadow p-6")
                            h2(class="text-xl font-semibold mb-6") Hồ sơ của tôi
                            p(class="text-gray-600 mb-6") Quản lý thông tin hồ sơ để bảo mật tài khoản
                            div(class="grid grid-cols-1 gap-x-8")
                                div(class="space-y-4")
                                    div(class="flex justify-between items-center space-x-4")
                                        label(class="block text-gray-600") Tên
                                        span(class="font-bold") #{INFOR_CUSTOMER.fullname}
                                    div(class="flex justify-between items-center space-x-4")
                                        label(class="block text-gray-600") Tên đăng nhập
                                        span(class="font-bold") #{INFOR_CUSTOMER.username}
                                    div(class="flex justify-between items-center space-x-4")
                                        label(class="block text-gray-600") Giới tính
                                        span(class="font-bold") #{INFOR_CUSTOMER.genders ? INFOR_CUSTOMER.genders == 'male' ? 'Nam' : 'Nữ' : 'Chưa có'}
                                    div(class="flex justify-between items-center space-x-4")
                                        label(class="block text-gray-600") Email
                                        span(class="font-bold") #{INFOR_CUSTOMER.email}
                                    div(class="flex justify-between items-center space-x-4")
                                        label(class="block text-gray-600") Số điện thoại
                                        span(class="font-bold") #{INFOR_CUSTOMER.phone ? INFOR_CUSTOMER.phone : 'Chưa có'}
                            div(class="flex justify-end gap-4 mt-8")
                                a(href = `${ROUTERS.CLIENT.CUSTOMER.PATH}${ROUTERS.CLIENT.CUSTOMER.INFOR_CUSTOMER}${ROUTERS.CLIENT.CUSTOMER.INFOR_CUSTOMER_UPDATE_INFOR}${ROUTERS.CLIENT.CUSTOMER.INFOR_CUSTOMER_UPDATE_PASSWORD}` class="px-6 py-2 bg-black text-white rounded-lg hover:bg-gray-800 transition")
                                    | Đổi mật khẩu
                                a(href=`${ROUTERS.CLIENT.CUSTOMER.PATH}${ROUTERS.CLIENT.CUSTOMER.INFOR_CUSTOMER}${ROUTERS.CLIENT.CUSTOMER.INFOR_CUSTOMER_UPDATE_INFOR}` class="px-6 py-2 bg-black text-white rounded-lg hover:bg-gray-800 transition")
                                    | Sửa thông tin
