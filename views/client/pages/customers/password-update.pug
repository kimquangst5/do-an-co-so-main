extends ../../layouts/layouts.pug
block css
block script
    script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11")
    script(src="https://cdn.jsdelivr.net/npm/axios@1.7.9/dist/axios.min.js") 
    script(type="module" src="/client/js/customer/password-update.js") 

block main

    - if(INFOR_CUSTOMER)
        div(class=`py-[20px] bg-transparent`)
            div(class=`container`)
                sl-breadcrumb
                    sl-breadcrumb-item(href='/')
                        sl-icon(slot="prefix" name="house")
                        | Trang chủ
                    sl-breadcrumb-item(href=`${ROUTERS.CLIENT.CUSTOMER.PATH}${ROUTERS.CLIENT.CUSTOMER.INFOR_CUSTOMER}`) Thông tin cá nhân
                    sl-breadcrumb-item() Đổi mật khẩu

        div(class=`bg-[#F5F5F5] h-max py-[20px]`)
            div(class=`container`)

                div(class=`rounded-lg bg-white gap-y-5 shadow-2xl shadow-[rgba(0,0,0,.15)] p-6 w-max min-w-[50%] mx-auto flex flex-col`)
                    h3(class=`text-[30px] font-bold`) Thay đổi mật khẩu

                    sl-input(type='password' placeholder='Mật khẩu' password-toggle clearable oncopy="return false" oncut="return false" onpaste="return false" onselectstart="return false" ondragstart="return false" ondrop="return false" name='old-password')
                    sl-input(type='password' placeholder='Mật khẩu mới' password-toggle clearable oncopy="return false" oncut="return false" onpaste="return false" onselectstart="return false" ondragstart="return false" ondrop="return false" name='new-password')
                    sl-input(type='password' placeholder='Xác nhận mật khẩu mới' password-toggle clearable oncopy="return false" oncut="return false" onpaste="return false" onselectstart="return false" ondragstart="return false" ondrop="return false" name='confirm-password')

                    button(btn-update = `${ROUTERS.CLIENT.CUSTOMER.PATH}${ROUTERS.CLIENT.CUSTOMER.INFOR_CUSTOMER}${ROUTERS.CLIENT.CUSTOMER.INFOR_CUSTOMER_UPDATE_INFOR}${ROUTERS.CLIENT.CUSTOMER.INFOR_CUSTOMER_UPDATE_PASSWORD}` class=`bg-[black] text-[white] rounded-lg py-[10px]`) Cập nhật mật khẩu

